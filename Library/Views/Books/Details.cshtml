@{
  Layout = "_Layout";
}

@model Library.Models.Book;

<h2>Book Details</h2>
<hr />
<h3>@Model.Name</h3>

@if(@Model.Authors.Count == 0)
{
  <p>This book does not have any authors. Who wrote it?</p>
}
else
{
  <h4>Authors of the book:</h4>
  <ul>
  @foreach(var join in Model.Authors)
  {
    <li id="mark">@Html.ActionLink($"{ join.Author.AuthorName }", "Details", "Authors", new { id = join.Author.AuthorId })</li>
  }
  </ul>

  <h4>Copys rented:</h4>
  <ul>
  @foreach(var join in Model.Copys)
  {
    <li id="mark">@join.Copy.CopyNumber</li>
  }
  </ul>
}

<p>@Html.ActionLink("Checkout Book?", "Index", "Patrons")</p>
<p>@Html.ActionLink("Back to Books", "Index")</p>
<p>@Html.ActionLink("Edit Book", "Edit", new { id = Model.BookId })</p>
<p>@Html.ActionLink("Delete Book", "Delete", new { id = Model.BookId })</p>