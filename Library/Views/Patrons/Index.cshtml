@{
    Layout = "_Layout";
}

@using Library.Models;

<h2>Patrons</h2>
@if (Model.Count == 0)
{
    <h3>No Patrons have been added yet!</h3>
}

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")  
        <input class="button" type="submit" value="Search" />
    </p>
}

@foreach (Patron patron in Model)
{
    <li id="patronIndexP">@Html.ActionLink($"{ patron.PatronName }", "Details", new { id = patron.PatronId })</li>
}
<hr>
<p>@Html.ActionLink("Add new Patron", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
